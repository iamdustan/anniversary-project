// {{{ general

*
  box-sizing: border-box

body
  background: #eee
  overflow: hidden
  height: 768px
  width: 1024px

#scene
  border: 4px solid #222
  border-bottom: 0
  background: #a2e4e3
  min-height: 500px
  position: relative

#storybox-border
  background: #127f86
  border: 4px solid #222
  padding: 8px
  position: relative
  z-index: 10

#storybox
  background: #0e5363
  border: 4px solid #222
  color: #fff
  font-family: monospace
  font-size: 1.333em
  font-weight: 300
  line-height: 1.66
  padding: 1.5em 1.5em 1.5em 10em
  min-height: 12em
  svg
    position: absolute
    left: 3em

// general }}}
// {{{ scene

svg
  max-width: 100%

#livets-ord
  position: absolute
  right: 0
  top: 20px
  max-width: 45%
  z-index: 5

.actor
  opacity: 1
  transform: scale(1)
  transition: all 1.8s ease

.actor-is-loading
  opacity: 0
  transform: scale(0)

#uppsala
  position: absolute
  right: 0
  top: 160px
  max-width: 50%
  z-index: 6

#tiramisu
  position: absolute
  right: -50px
  top: 30%
  max-width: 50%
  z-index: 7

#hutchinson
  position: absolute
  left: 0
  top: 80px
  max-width: 45%
  z-index: 5

#lincolnton
  position: absolute
  left: 0
  top: 220px
  max-width: 45%
  z-index: 6

#courthouse
  position: absolute
  left: 250px
  top: 310px
  max-width: 60%
  z-index: 7

#clouds,
#water
  position: absolute
  left: 4px
  right: 4px

#clouds
  top: 0

#water
  top: 120px

// scene }}}
